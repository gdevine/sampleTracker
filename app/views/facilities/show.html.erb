<% provide(:title, 'Facility View') %>
<% provide(:pageheading, 'Facility '+ @facility.code) %>

<!-- Add edit/delete buttons if current user -->
<% if current_user?(@facility.contact) %> 
  <div class="row">  
    <div class="span2 offset8">
      <%= button_to "Edit Facility", {:action => 'edit' }, :method => :get, :class=>"btn btn-block" %>
    </div>
    <div class="span2">
      <%= button_to "Delete Facility", @facility, method: :delete, data: { confirm: "Are you sure?" }, title: @facility.code, :class=>"btn btn-block btn-danger" %>
    </div>
  </div>
<% end %>

<div class="row">  
  <div class="span3 offset3">
    <h4>Facility ID</h4>
  </div>
  <div class="span3 offset1">
    <h4><%= @facility.id %></h4>
  </div>
</div>

<div class="row">  
  <div class="span3 offset3">
    <h4>Facility Code</h4>
  </div>
  <div class="span3 offset1">
    <h4><%= @facility.code %></h4>
  </div>
</div>

<div class="row">  
  <div class="span3 offset3">
    <h4>Description</h4>
  </div>
  <div class="span3 offset1">
    <h4><%= @facility.description %></h4>
  </div>
</div>

<div class="row">   
  <div class="span3 offset3">
    <h4>Owner</h4>
  </div>
  <div class="span3 offset1">
    <h4><%= @facility.contact.firstname %> <%= @facility.contact.surname %></h4>
  </div>
</div>


<h2 class= "heading-separator">Sample Sets associated with this facility</h2>

<div class="row">
  <div class="span12">
    <%= render 'sample_sets/sample_sets' %>
  </div>
</div>

<h2 class= "heading-separator">Samples associated with this facility</h2>

<div class="row">
  <div class="span12">
    <%= render 'samples/samples' %>
  </div>
</div>


