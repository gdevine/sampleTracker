<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;          </button>
    <h3 class="modal-title" id="myModalLabel">Sample Set</h3>
  </div>
  <div class="modal-body">
	
	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">ID</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.id %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Owner</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.owner.firstname %> <%= @sample.sample_set.owner.surname %></p>
	  </div>
	</div>
	
	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Facility</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.facility.code %></p>
	  </div>
	</div>
	
	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Project</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.project_id %></p>
	  </div>
	</div>
	
	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Number of Samples</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.num_samples %></p>
	  </div>
	</div>

	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Sampling Date</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.sampling_date %></p>
	  </div>
	</div>

	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Status</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.status %></p>
	  </div>
	</div>	

	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Additional Info</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.sample_set.add_info %></p>
	  </div>
	</div>
	
  </div> 
  
  <div class="modal-footer">
  	<%= link_to "View Sample Set", sample_set_path(id:@sample.sample_set.id) %>
  </div>
</div>
</div>