<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times; </button>
    <h3 class="modal-title" id="myModalLabel">Storage Location</h3>
  </div>
  <div class="modal-body">
	
	<div class="row">
	  <div class="col-md-3 ">
	    <p class="text-left">Storage Location ID</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.storage_location.id %></p>
	  </div>
	</div>
	
	<div class="row">
	  <div class="col-md-3 ">
	    <p class="text-left">Code</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.storage_location.code %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-3 ">
	    <p class="text-left">Building</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.storage_location.building %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-3 ">
	    <p class="text-left">Room</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.storage_location.room %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-3 ">
	    <p class="text-left">Address</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.storage_location.address %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-3 ">
	    <p class="text-left">Custodian</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.storage_location.custodian.firstname %> <%= @sample.storage_location.custodian.surname %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-3 ">
	    <p class="text-left">Description</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.storage_location.description %></p>
	  </div>
	</div>

	
  </div> 
  
  <div class="modal-footer">
  	<%= link_to "View Storage Location", storage_location_path(id:@sample.storage_location.id) %>
  </div>
</div>
</div>