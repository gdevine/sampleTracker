<div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
	   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;          </button>
	    <h3 class="modal-title" id="myModalLabel">Project</h3>
	  </div>
	  <div class="modal-body">
	  	
	  	<div class="row">
		  <div class="col-md-3">
		    <p class="text-left">Project Title</p>
		  </div>   
		  <div class="col-md-9">
		    <p class="text-muted"><%= @sample.project.title %></p>
		  </div>
		</div>
		
	    <div class="row">
		  <div class="col-md-3">
		    <p class="text-left">Project Code</p>
		  </div>   
		  <div class="col-md-9">
		    <p class="text-muted"><%= @sample.project.code %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-3">
		    <p class="text-left">Description</p>
		  </div>   
		  <div class="col-md-9">
		    <p class="text-muted"><%= @sample.project.description %></p>
		  </div>
		</div>
		
	  </div> 
	  
	  <div class="modal-footer">
	  	<%= link_to "View Project", project_path(id:@sample.project.id) %>
	  </div>
	</div>
</div>