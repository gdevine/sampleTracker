<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;          </button>
    <h3 class="modal-title" id="myModalLabel">Facility</h3>
  </div>
  <div class="modal-body">
	
    <div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Facility Code</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.facility.code %></p>
	  </div>
	</div>
	
	<div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Description</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.facility.description %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-3">
	    <p class="text-left">Contact</p>
	  </div>   
	  <div class="col-md-9">
	    <p class="text-muted"><%= @sample.facility.contact.firstname %> <%= @sample.facility.contact.surname %></p>
	  </div>
	</div>
	
  </div> 
  
  <div class="modal-footer">
  	<%= link_to "View Facility", facility_path(id:@sample.facility.id) %>
  </div>
</div>
</div>