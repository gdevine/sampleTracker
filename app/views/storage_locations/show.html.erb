<% provide(:title, 'Storage Location View') %>
<% provide(:pageheading, 'Storage Location '+ @storage_location.code) %>

<!-- Add edit/delete links if current user -->
<% if current_user?(@storage_location.custodian) %> 
 <div class="row bottomspace">  
    <div class="col-xs-12 col-sm-2 col-sm-push-10">
		<a class="btn btn-block btn-info" data-toggle="dropdown" href="#" id="options_button">
		  Options
		  <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
		    <li><%= link_to "Edit Location", :action => 'edit' %></li>
		    <li><%= link_to "Delete Location", @storage_location, :method => :delete, data: { confirm: "Are you sure?" }, :class=>"redtext" %></li>
		</ul>
	</div>
  </div>
<% end %>


<div class="topspace50">
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Storage Location ID</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.id %></p>
	  </div>
	</div>
	
	<div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Code</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.code %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Building</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.building %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Room</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.room %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Address</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.address %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Custodian</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.custodian.firstname %> <%= @storage_location.custodian.surname %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Description</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.description %></p>
	  </div>
	</div>

</div>


<h4 class= "heading-separator rowline center">Samples associated with this storage location</h4>

<div class="row">
  <div class="col-xs-12">
    <%= render 'samples/samples' %>
  </div>
</div>

<h4 class= "heading-separator rowline center">Containers associated with this storage location</h4>

<div class="row">
  <div class="col-xs-12">
    <%= render 'containers/containers' %>
  </div>
</div>
