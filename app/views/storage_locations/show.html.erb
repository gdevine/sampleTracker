<% provide(:title, 'Storage Location View') %>
<% provide(:pageheading, 'Storage Location '+ @storage_location.code) %>


<div class="topspace50">
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Storage Location ID</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.id %></p>
	  </div>
	</div>
	
	<div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Code</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.code %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Building</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.building %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Room</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.room %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Address</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.address %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Custodian</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.custodian.firstname %> <%= @storage_location.custodian.surname %></p>
	  </div>
	</div>
	
    <div class="row">
	  <div class="col-md-offset-4 col-md-2">
	    <p class="text-left">Description</p>
	  </div>   
	  <div class="col-md-4">
	    <p class="text-muted"><%= @storage_location.description %></p>
	  </div>
	</div>

</div>


  <div class="row">
    <div class="col-xs-12 rowline">
      <h4>Samples associated with this storage location</h4>
    </div>
  </div>

<div class="row">
  <div class="col-xs-12">
    <%= render 'samples/samples' %>
  </div>
</div>


  <div class="row">
    <div class="col-xs-12 rowline">
      <h4>Containers associated with this storage location</h4>
    </div>
  </div>

<div class="row">
  <div class="col-xs-12">
    <%= render 'containers/containers' %>
  </div>
</div>
