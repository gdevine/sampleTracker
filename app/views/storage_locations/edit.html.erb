<% provide(:title, "Edit Storage Location") %>
<% provide(:pageheading, 'Edit Storage Location '+ @storage_location.code ) %>

<%= form_for(@storage_location) do |f| %>
  <div class="row">
    <div class="span6 offset3">
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :code, 'Storage Location Code' %>
      <%= f.text_field :code %>
      
      <%= f.label :building, 'Building' %>
      <%= f.text_field :building %>
      
      <%= f.label :room, 'Room' %>
      <%= f.number_field :room, :min => 0 %>
      
      <%= f.label :address, 'Address' %>
      <%= f.text_field :address %>
      
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, size: "60x12" %>
    </div>
    
    <div class="row">
      <div class="span4 offset5">
        <%= f.submit "Update Storage Location", class: "btn btn-large btn-primary" %>
      </div>
    </div>
    
  </div>
<% end %>